{
  "name": "eslint-plugin-vue-modular",
  "version": "0.0.2",
  "description": "ESLint plugin for checking and maintaining architecture boundaries in Vue 3 modular applications.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewmolyuk/eslint-plugin-vue-modular.git"
  },
  "keywords": [
    "eslint",
    "vue3",
    "modular",
    "boundaries",
    "architecture"
  ],
  "author": "Andrew Molyuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewmolyuk/eslint-plugin-vue-modular/issues"
  },
  "homepage": "https://github.com/andrewmolyuk/eslint-plugin-vue-modular#readme",
  "scripts": {
    "test": "vitest",
    "release": "standard-version",
    "release:push": "npm run release && git push --follow-tags",
    "release:github": "npm run release:push && gh release create $(git describe --tags --abbrev=0) --notes-file CHANGELOG.md"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "npm-check-updates": "^18.0.2",
    "standard-version": "^9.5.0",
    "vitest": "^3.2.4"
  }
}
